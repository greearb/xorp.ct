Import('env')

subdirs = [
    'cli',
    'libcomm',
    'libxorp',
    'libxipc',
    'libproto',
    'libfeaclient',
    'xrl/targets',
    'xrl/interfaces',
    #'xrl/tests',		# XXX not in use.
    'etc/templates',
    'fea',
    'fib2mrib',
    'mld6igmp',
    'mrt',
    'pim',
    'policy',
    'rib',
    'rtrmgr',
    'static_routes',
    'utils',
    ]

if env['enable_olsr']:
    subdirs.append('contrib/olsr')

if env['enable_wrapper']:
    subdirs.append('contrib/wrapper')

if env['enable_bgp']:
    subdirs.append('bgp')

if env['enable_ospf']:
    subdirs.append('ospf')

if env['enable_rip']:
    subdirs.append('rip')

if env['enable_vrrp']:
    subdirs.append('vrrp')

SConscript(dirs = subdirs, exports='env')
